upstream app_server {
  server unix:/tmp/unicorn.<%= fetch(:full_app_name) %>.sock fail_timeout=0;
}

server {
  server_name <%= fetch(:server_name) %>;
  listen 8000;

  root <%= fetch(:deploy_to) %>/current/public;

  access_log <%= fetch(:shared_path) %>/log/nginx-access.log;
  error_log <%= fetch(:shared_path) %>/log/nginx-error.log;
  rewrite_log on;

  location ~* ^(/assets|/favicon.ico) {
    access_log off;
    log_not_found off;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    break;
  }

  location / {
    try_files $uri @app_server;
  }

  location @app_server {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app_server;
  }

  error_page 404 422 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
<% if fetch(:enable_ssl) %>
server {
  server_name <%= fetch(:server_name) %>;
  listen 443;
  root <%= fetch(:deploy_to) %>/current/public;

  access_log <%= fetch(:shared_path) %>/log/nginx-access.log;
  error_log <%= fetch(:shared_path) %>/log/nginx-error.log;

  location ~* ^(/assets|/favicon.ico) {
    access_log off;
    log_not_found off;
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    break;
  }

  location / {
    try_files $uri @app_server;
  }

  location @app_server {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app_server;
  }

  error_page 404 422 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;

  ssl on;
  ssl_certificate <%= fetch(:shared_path) %>/ssl_cert.crt;
  ssl_certificate_key <%= fetch(:shared_path) %>/ssl_private_key.key;
}
<% end %>